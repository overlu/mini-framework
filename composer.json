{
    "name": "overlu/mini-framework",
    "type": "library",
    "description": "A simple, lightweight and high-performance PHP coroutine framework.",
    "keywords": [
        "php",
        "swoole",
        "coroutine",
        "simple",
        "mini",
        "mini-framework"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-swoole": ">=4.5",
        "ext-seaslog": ">=2.1",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "overlu/mini-route": "^2.1",
        "psr/http-message": "^1.0",
        "laminas/laminas-mime": "^2.7",
        "symfony/finder": "^5.1",
        "symfony/translation": "^5.1",
        "symfony/polyfill-php80": "^1.15",
        "psr/container": "^1.0",
        "nesbot/carbon": "^2.36",
        "doctrine/inflector": "^2.0",
        "opis/closure": "^3.6",
        "league/flysystem": "^3.0",
        "psr/event-dispatcher": "^1.0",
        "laravel/serializable-closure": "^1.3",
        "guzzlehttp/guzzle": "^7.8",
        "guzzlehttp/uri-template": "^1.0",
        "symfony/mailer": "^6.2",
        "league/commonmark": "^2.2",
        "tijsverkoyen/css-to-inline-styles": "^2.2.5",
        "voku/portable-ascii": "^2.0",
        "ramsey/uuid": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Mini\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "files": [
            "src/_ide_helper.php"
        ]
    },
    "require-dev": {
        "overlu/var-dumper": "^1.0",
        "phpunit/phpunit": "^9.2",
        "doctrine/dbal": "^3.0",
        "aws/aws-sdk-php": "^3.314"
    }
}
